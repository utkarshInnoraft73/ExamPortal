{% extends "base.html.twig" %}

{% block body %}
	{% if app.user %}
		<div class="d-flex flex-column flex-shrink-0 p-3 bg-light bg-yellow" style="width: 280px;">
			<h3>Welcome,
				<span style="font-size: 15px; font-weight:200;">{{ app.user.userIdentifier }}</span>
			</h3>
			<a href="{{ path('app_logout') }}">Logout</a>
			<hr>
			<ul class="nav nav-pills flex-column mb-auto">
				<li>
					<a href="{{path('app_dashboard')}}" class="nav-link link-dark">
						Dashboard
					</a>
				</li>
				<li>
					<a href="{{path('app_appliedExams', {'id': app.user.id})}}" class="nav-link link-dark">
						Applied Exams
					</a>
				</li>
				<li>
					<a href="{{path('app_exams')}}" class="nav-link link-dark">
						Upcoming exams
					</a>
				</li>
				<li>
					<a href="{{ path('app_profile', { 'id': app.user.id }) }}" class="nav-link link-dark">
						Profile
					</a>
				</li>
			</ul>
		</div>

	{% endif %}

	<div class="container" style="width:1000px; position:absolute; right:50px; top:50px;">
		{% if jsonData.resultId is empty %}
			<div class="alert alert-danger" role="alert">
				There is no any exam appeared by you.
				<a href="{{path('app_exams')}}">Apply exam
				</a>
			</div>
		{% else %}
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Exam Name</th>
						<th scope="col">Passing Marks</th>
						<th scope="col">Gotten Marks</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for i in 0..(jsonData.resultId|length - 1) %}
						<tr>
							<td>{{ i + 1 }}</td>
							<td>Hello</td>
							<td>Utkarsh</td>
							<td>{{jsonData.gotenmarks[i]}}</td>
							<td>
<a href="{{path('exam_result', {'resultId': jsonData.resultId[i]})}}" class="btn btn-primary">More details</td>

							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% endif %}
	{% endblock %}
