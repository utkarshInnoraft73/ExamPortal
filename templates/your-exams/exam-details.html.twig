{% extends "base.html.twig" %}

{% block body %}
	{% if app.user %}
		<div class="d-flex flex-column flex-shrink-0 p-3 bg-light bg-yellow" style="width: 280px;">
			<h3>Welcome,
				<span style="font-size: 10px; font-weight:200;" class="badge bg-success">Admin:
					{{ app.user.userIdentifier }}</span>
			</h3>
			<a href="{{ path('app_logout') }}">Logout</a>
			<hr>
			<ul class="nav nav-pills flex-column mb-auto">
				<li>
					<a href="{{path('app_admin')}}" class="nav-link link-dark">
						Dashboard
					</a>
				</li>
				<li>
					<a href="{{path('create_exam')}}" class="nav-link link-dark">
						Create exam
					</a>
				</li>
				<li>
					<a href="{{path('your_exams',{ 'id': app.user.id })}}" class="nav-link link-dark">
						Created Exam
					</a>
				</li>
			</ul>
		</div>
	{% endif %}
	<div class="container" style="width:1000px; position:absolute; right:50px; top:50px;">
		<div class="card text-center">
			<div class="card-header fs-5">
				{{jsonData.examName}}
			</div>
			<div class="card-body">
				<h5 class="card-title text-start">Number of questions:
					{{jsonData.totalQues}}</h5>
				<h5 class="card-title text-start">Passing marks:
					{{jsonData.fullMarks}}</h5>
				<h5 class="card-title text-start">Passing marks:
					{{jsonData.passingMarks}}</h5>
				<h5 class="card-title text-start">Durations:
					{{jsonData.duration}}</h5>
			</div>
		</div>
	</div>
{% endblock %}
